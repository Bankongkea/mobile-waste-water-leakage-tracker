                    <!--android:layout_height="wrap_content" />-->

                <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:text="camera"-->
                    <!--android:onClick="camera"-->
                    <!--android:layout_height="wrap_content" />-->


            <!--</LinearLayout>-->


        </LinearLayout>


    </ScrollView>

